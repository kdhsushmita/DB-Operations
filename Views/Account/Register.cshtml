@model entitiyauthentication.Models.RegisterModel

@{
    ViewData["Title"] = "Register";
}
<br />
<div class="row" style="display: flex; justify-content: center; align-items: center;">
    <div class="col-md-4" style="border: 1px solid #ccc; padding: 20px; border-radius: 10px; background-color: #f9f9f9; box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);">
        <h4 style="text-align: center; margin-top: 0;">Signup for Food Online</h4>
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <h6 style="text-align: center">By Signing Up, I agree to Food Online’s Terms of Use and Privacy Policy.</h6>
            <div class="form-group">
                <input type="submit" value="Sign Up" class="btn btn-warning" style="width: 395px;" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
